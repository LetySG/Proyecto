<div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Registro Tutor</h5>
            <form action="/registro-tutor/add" method="post">
             

              <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese su nombre">
              </div>

              <div class="form-row">
              <div class="form-group col-md-6">
                <label for="apellido">Primer apellido</label>
                <input type="text" class="form-control" id="Primer_Apellido" name="Primer_Apellido" placeholder="Ingrese primer apellido">
              </div>
              <div class="form-group col-md-6">
                <label for="apellido">Segundo apellido</label>
                <input type="text" class="form-control" id="Segundo_Apellido" name="Segundo_Apellido"placeholder="Ingrese segundo apellido">
              </div>
            </div>
            

                  <hr class="separator">
                  <div class="form-group">
                    <label for="licenciatura">Licenciatura asignada</label>
                    <select class="form-control" id="licenciatura_Asignada" name="licenciatura_Asignada">
                        <option value="Seleccione una Licenciatura">Seleccione una Licenciatura</option>
                      <option value="Nutricion UdeG">Nutrición UdeG</option>
                      <option value="Psicologia">Psicología</option>
                      <option value="Administracion de Empresas">Administración de Empresas</option>
                      <option value="Actividad Fisica Deportiva Saludable">Actividad Física Deportiva Saludable</option>
                      <option value="Turismo y Gestion de Proyectos">Turismo y Gestión de Proyectos</option>
                      <option value="Arquitectura">Arquitectura</option>
                      <option value="Ciencias de la Comunicacion">Ciencias de la Comunicación</option>
                      <option value="Contaduria Publica">Contaduría Pública</option>
                      <option value="Derecho">Derecho</option>
                      <option value="Derecho Semiescolarizado">Derecho Semiescolarizado</option>
                      <option value="Diseño para la Comunucacion Grafica">Diseño para la Comunicación Gráfica</option>
                      <option value="Diseño Grafico y Digital">Diseño Gráfico y Digital</option>
                      <option value="Gastronomia">Gastronomía</option>
                      <option value="Ingenieria en Software">Ingeniería en Software</option>
                      <option value="Mercadotecnia">Mercadotecnia</option>
                      <option value="Negocios Internacionales">Negocios Internacionales</option>
                      <option value="Administracion Estrategica de los Negocios">Administración Estratégica de los Negocios</option>
                      <option value="Mercadotecnia Estrategica Ezcolarizada">Mercadotecnia Estratégica Escolarizada</option>
                      <option value="Mercadotecnia Estrategica Mixta">Mercadotecnia Estratégica Mixta</option>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label for="turno">Turno asignado</label>
                    <select class="form-control" id="Turno_Asignado" name="Turno_Asignado">
                        <option value="Seleccione un Turno">Seleccione un Turno</option>
                      <option value="Matutino">Matutino</option>
                      <option value="Vespertino">Vespertino</option>
                      <option value="Nocturno">Nocturno</option>
                    </select>
                  </div>
                  <hr class="separator">

              <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo electrónico">
              </div>
              <div class="form-row">
              <div class="form-group col-md-6">
                <label for="contrasena">Contraseña</label>
                <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="Ingrese una contraseña">
              </div>
              <div class="form-group col-md-6">
                <label for="confirmar-contrasena">Confirmar Contraseña</label>
                <input type="password" class="form-control" id="confirmar_contraseña" name="confirmar_contraseña" placeholder="Confirme la contraseña">
              </div>
            </div>
            
              <button type="submit" class="btn btn-block">Registrarse</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

