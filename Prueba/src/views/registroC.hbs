<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
         
           <form action="/registro/user/coordinador/add" method="post">
            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre"placeholder="Ingrese su nombre">
            </div>
            <div class="form-group">
              <label for="apellido">Apellidos</label>
              <input type="text" class="form-control" id="primerApellido" placeholder="primerApellido">
